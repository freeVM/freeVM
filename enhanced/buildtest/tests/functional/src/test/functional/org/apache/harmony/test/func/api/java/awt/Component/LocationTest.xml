<Test
    ID="LocationTest"
    date-of-creation="2005-05-11"
    timeout="1"
    >

    
    

    <APITestDescription>
        <TestedClass name="java.awt.Component" />
        <TestedMethod name="public boolean contains(int x, int y)" />
        <TestedMethod name="public boolean contains(Point p)" />
        <TestedMethod name="public Rectangle getBounds()" />
        <TestedMethod name="public Rectangle getBounds(Rectangle rv)" />
        <TestedMethod name="public int getHeight()" />
        <TestedMethod name="public Point getLocation()" />
        <TestedMethod name="public Point getLocation(Point rv)" />
        <TestedMethod name="public Dimension getSize()" />
        <TestedMethod name="public Dimension getSize(Dimension rv)" />
        <TestedMethod name="public int getWidth()" />
        <TestedMethod name="public int getX()" />
        <TestedMethod name="public int getY()" />
        <TestedMethod name="public void setBounds(int x, int y, int width, int height)" />
        <TestedMethod name="public void setBounds(Rectangle r)" />
        <TestedMethod name="public void setLocation(int x, int y)" />
        <TestedMethod name="public void setLocation(Point p)" />
        <TestedMethod name="public void setSize(Dimension d)" />
        <TestedMethod name="public void setSize(int width, int height)" />
        
    </APITestDescription>
    
    <Keyword name="functional" />
    <Keyword name="gui" />
    
    <Source name="LocationTest.java"/>

    <Runner ID="Runtime">
        <Param name="toRun" value="org.apache.harmony.test.func.api.java.awt.Component.LocationTest">
                <Option name="-reference" value="$ReferenceRuntime"/>
                <Option name="-tested" value="$TestedRuntime"/>
                <Option name="-generalVMOption" value="$generalVMOption"/>                                
                <Option name="-temp" value="$TempStorage"/>
                <Option name="-usedCP" value="$CP"/>
                <Option name="-bootCP" value="$bootClassPath"/>
                <Option name="-atomic" value="$performance.tests.atomic"/>
                <Option name="-sets" value="$performance.tests.sets"/>
                <Option name="-mode" value="$performance.tests.mode"/>
                <Option name="-threads" value="$qa.threads"/>
        </Param>
    </Runner>
</Test> 
