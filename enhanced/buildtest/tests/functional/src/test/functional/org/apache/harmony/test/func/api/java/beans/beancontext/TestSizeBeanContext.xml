<Test  ID="TestSizeBeanContext"  date-of-creation="2005-04-11" timeout="1">
    
    
    <MulticaseTestDescription>
        <TestedClass name="java.beans.beancontext.BeanContextSupport"/>
        <Case ID="testSize">
             <TestedMethod name="public int size()"/>
            <Description>
            1. Create 3 different Bean objects, and one of them with BeanContext (4 components)
            2. Adding the components
            3. Verified that the BeanContext contains 4 components
            </Description>
        </Case>
        <Case ID="testIsContextEmpty">
             <TestedMethod name="public boolean isEmpty()"/>
            <Description>
            1. Create 3 different Bean objects, and one of them with BeanContext (4 components)
            2. Adding the components
            3. Verified that the BeanContext isn't empty
            </Description>
        </Case>
    </MulticaseTestDescription>    
    <Keyword name="functional"/>    
    <Source name="TestSizeBeanContext.java"/>
    <Runner ID="MultiCase">
    <Param name="toRun" value="org.apache.harmony.test.func.api.java.beans.beancontext.TestSizeBeanContext">           
    </Param>    
</Runner>        
</Test>
