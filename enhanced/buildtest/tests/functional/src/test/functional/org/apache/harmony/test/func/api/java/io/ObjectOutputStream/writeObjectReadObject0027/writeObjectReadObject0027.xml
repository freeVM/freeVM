<Test
    ID="writeObjectReadObject0027"
    date-of-creation="2004-11-01"
    timeout="1"
    >    
        
        
        
        <APITestDescription>
            <TestedClass name="java.io.ObjectOutputStream"/>
            <TestedMethod name="writeObject(Object)"/>
            
            <TestedClass name="java.io.ObjectInputStream"/>
            <TestedMethod name="public final Object readObject() "/>
            
            <Description>
            tests that private methods writeObject(ObjectOutputStream) and readObject(ObjectInputStream) in a serializable class are called properly.
            creates object with two strings and two integers and custom writeObject(...) and readObject(...) methods. Those custom methods
            use writeUTF/readUTF, writeInt/readInt methods to write data to serialization stream. Some fields' values tweaking
            is also performed in these methods to be sure that they are really called, but not just standard mechanism
            </Description>
            </APITestDescription>

        <Keyword name="functional"/>
        <Source name="writeObjectReadObject0027.java"/>
        
        
        <Runner ID="Runtime">
            <Param name="toRun" value="org.apache.harmony.test.func.api.java.io.ObjectOutputStream.writeObjectReadObject0027.writeObjectReadObject0027">
                <Option name="-reference" value="$ReferenceRuntime"/>
                <Option name="-tested" value="$TestedRuntime"/>
                <Option name="-generalVMOption" value="$generalVMOption"/>                                                
                <Option name="-temp" value="$TempStorage"/>
                <Option name="-usedCP" value="$CP"/>
                <Option name="-bootCP" value="$bootClassPath"/>
                <Option name="-atomic" value="$performance.tests.atomic"/>
                <Option name="-sets" value="$performance.tests.sets"/>
                <Option name="-mode" value="$performance.tests.mode"/>
                <Option name="-threads" value="$qa.threads"/>
            </Param>            
            
        </Runner>
        <Restriction name="OtherVMOnly"/>
</Test>
