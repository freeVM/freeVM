<!DOCTYPE Test SYSTEM "test.dtd">
<!--
Author: Vera Y.Petrashkova
Version: $Revision: 1.5 $
-->
<Test ID="testManySubClasses" 
        date-of-creation="2005-08-31"
        timeout="1">
    	<Copyright value="apache"/>
        <Author value="Vera Y. Petrashkova"/>
        <Description>
	        Load 201 classes which extends each other. 
	        invoke some methods declared
        	in these classes and verify fields values.
        	This performance is repeated several times.
        	Parameters: 0 - number of iterations
        </Description>
        <Keyword name="stress"/>
        <Source name="testManySubClasses.java"/>
        <Source name="testManySubClasses_CA.java"/>        
        <Source name="testManySubClasses_CE.java"/>
        <Runner ID="Runtime">
            <Option value="-Dorg.apache.harmony.test.share.stress.ReliabilityRunner.params=
					org.apache.harmony.test.stress.classloader.OneThread.SubClasses.testManySubClasses {}"/>
            <Option value="-Dorg.apache.harmony.test.stress.classloader.OneThread.SubClasses.testManySubClasses.arg0=100"/>
            <Option value="-Dorg.apache.harmony.test.stress.classloader.OneThread.SubClasses.testManySubClasses.arg1=org.apache.harmony.test.stress.classloader.OneThread.SubClasses"/>
		<Param name="toRun" value="org.apache.harmony.test.share.stress.ReliabilityRunner">
		</Param>
		</Runner> 
		<Restriction name="OtherVMOnly"/>
</Test>