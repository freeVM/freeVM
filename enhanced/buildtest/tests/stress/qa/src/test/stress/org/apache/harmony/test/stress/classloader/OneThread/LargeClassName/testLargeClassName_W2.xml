<Test
	ID="testLargeClassName_W2"
        date-of-creation="2005-11-09"
        timeout="1">
    	<Copyright value="apache"/>
        <Author value="Vera Y. Petrashkova"/>
        <Description>
	        Load a lot of classes with wrong large class name;
	        NoClassDefFoundError must be thrown.
        	This performance is repeated several times.
        	Parameters: 0 - number of iterations
        	            1 - number of used classes
        	            2 - mode (one classloader or many will be used)
        </Description>
        <Keyword name="stress"/>
        <Source name="../../share/LargeClassName/testLCN_W.java"/>        
        <Source name="../../share/LargeClassName/testLCN_0.ccode"/>        
        <Source name="../../share/LargeClassName/testLCN.ccode"/>        
        <Runner ID="Runtime">
            <Option value="-Dorg.apache.harmony.test.share.stress.ReliabilityRunner.params=
					org.apache.harmony.test.stress.classloader.share.LargeClassName.testLCN_W {}"/>
            <Option value="-Dorg.apache.harmony.test.stress.classloader.share.LargeClassName.testLCN_W.arg0=5"/>
            <Option value="-Dorg.apache.harmony.test.stress.classloader.share.LargeClassName.testLCN_W.arg1=100"/>
            <Option value="-Dorg.apache.harmony.test.stress.classloader.share.LargeClassName.testLCN_W.arg2=1"/>
		<Param name="toRun" value="org.apache.harmony.test.share.stress.ReliabilityRunner">
		</Param>
		</Runner> 
		<Restriction name="OtherVMOnly"/>
</Test>
		