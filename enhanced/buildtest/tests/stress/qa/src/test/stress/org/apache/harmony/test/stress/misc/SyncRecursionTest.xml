<Test ID="SyncRecursionTest" date-of-creation="2005-11-01"
timeout="5">
  <Copyright value="apache" />

  <Author value="Vladimir Nenashev" />

  <Description>Synchronized Java method is called recursively until
  StackOverflowError exception occurs. Then the recursion depth is
  checked: if it is more than 255 the test passes, otherwise the
  test fails.</Description>

  <Keyword name="stress" />

  <Source name="SyncRecursionTest.java" />

  <Runner ID="Runtime">
	<Option value="-Dorg.apache.harmony.test.share.stress.ReliabilityRunner.params=
			org.apache.harmony.test.stress.misc.SyncRecursionTest {}"/>
	<Param name="toRun" value="org.apache.harmony.test.share.stress.ReliabilityRunner">
	</Param>
  </Runner>

  <Restriction name="OtherVMOnly" />
</Test>
