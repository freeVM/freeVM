  <Runner ID="Runtime">
    <Param name="toRun" value="org.apache.harmony.vts.test.vm.jvms.share.vmVerifierRun">
          <Option name="load"/>
          <Option name="org.apache.harmony.vts.test.vm.jvms.classFile.attributes.annotation.runtimeVisibleAnnotations.methodinfo01.annotation01p"/>
    </Param>
  </Runner>
</Test>
