<Test
  ID="magic01"
  date-of-creation="2006-04-26"
  timeout="1"
  >
  <Author value="Khen G. Kim"/>
  <Description>
    Checks that VM throws java.lang.ClassFormatError while loading class with invalid 
    magic value 0xCAFEBABA.
    Covered assertions assert_class031
</Description>

  <Keyword name="verifier"/>
  <Keyword name="pass1"/>
  <Source name="magic01n.ccode"/>

  <Runner ID="Runtime">
    <Param name="toRun" value="org.apache.harmony.vts.test.vm.jvms.share.vmVerifierRun">
                <Option name="load"/>
                <Option name="org.apache.harmony.vts.test.vm.jvms.classFile.structure.magic.magic01.magic01n"/>
                <Option name="java.lang.ClassFormatError"/>
            </Param>
  </Runner>
</Test>
