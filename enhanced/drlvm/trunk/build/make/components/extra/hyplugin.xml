<!--
    This is build descriptor for the component "extra.hyplugin".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="extra.hyplugin">

    <target name="init">
        <property name="jarname" value="org.apache.harmony.eclipse.jdt.launching_1.0.0.jar" />
        <property name="builddir" value="${build.dir}/_other/org.apache.harmony.eclipse.jdt.launching_1.0.0"/>
        <mkdir dir="${builddir}" />
        <copy todir="${builddir}">
            <fileset dir="${build.HYPLUGIN.home}/src">
                <include name="**/*.properties" />
            </fileset>
        </copy>
        <copy todir="${builddir}">
            <fileset dir="${build.HYPLUGIN.home}">
                <include name="plugin.xml"/>
                <include name=".options"/>
            </fileset>
        </copy>

        <patternset id="java.source.pattern">
            <include name="src/**/*.java" />
        </patternset>

        <patternset id="java.classes.pattern">
            <include name="**/*" />
        </patternset>

        <property name="java.build.dir" location="${builddir}" />

        <path id="java.source">
            <pathelement location="${build.HYPLUGIN.home}"/>
        </path>
        <property name="manifest.file" value="${build.HYPLUGIN.home}/META-INF/MANIFEST.MF"/>
        <path id="java.class.path">
            <fileset dir="${java.home}" includes="**/*.jar" />
            <fileset dir="${build.ECLIPSE.home}" includes="**/*.jar" />
        </path>
 
    </target>
    
</project>
