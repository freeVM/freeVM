<!--
Gets ant-contrib.zip from remote.ANTCONTRIB.location to ${build.precopied.dir}/archives/common/ANTCONTRIB,
unzip it to ${build.precopied.dir}/common/ANTCONTRIB and copy 
ant-contrib.jar to tmp folder for the later use of the rest of the build 
-->
<project name="GET_ANT_CONTRIB" default="get.antcontrib">

    <target name="set.proxy" if="proxy">
        <echo message="proxy host: ${http.proxyHost}" />
        <echo message="proxy port: ${http.proxyPort}" />
        <setproxy proxyhost="${http.proxyHost}" proxyport="${http.proxyPort}" />
    </target>

    <target name="get.internal" if="need.copy">
        <copy file="${remote.ANTCONTRIB.archive}" tofile="${local.ANTCONTRIB.archive}" failonerror="true" />
    </target>

    <target name="get.external" depends="set.proxy" if="need.get">
        <get src="${remote.ANTCONTRIB.archive}" dest="${local.ANTCONTRIB.archive}" />
    </target>

    <target name="unzip.antcontrib" unless="antcontrib.unzipped">
        <unzip src="${local.ANTCONTRIB.archive}" dest="${local.ANTCONTRIB.location}/.." />
        <echo file="${local.ANTCONTRIB.location}/ANTCONTRIB.txt" message="${local.ANTCONTRIB.archive}" />
    </target>

    <target name="get.antcontrib" depends="init.antcontrib, get.internal, get.external, unzip.antcontrib">
        <copy file="${local.ANTCONTRIB.location}/lib/ant-contrib.jar" todir="tmp" />
    </target>

    <target name="init.antcontrib">

        <property name="remote.ANTCONTRIB.archive" value="${env.remote.ANTCONTRIB.archive}" />
        <condition property="local.ANTCONTRIB.archive" value="${env.local.ANTCONTRIB.archive}">
            <isset property="local.ANTCONTRIB.archive" />
        </condition>
        <property name="local.ANTCONTRIB.archive.home" value="${build.precopied.dir}/archives/common/ANTCONTRIB" />
        <mkdir dir="${local.ANTCONTRIB.archive.home}" />
        <property name="local.ANTCONTRIB.archive" value="${build.precopied.dir}/archives/common/ANTCONTRIB/ant-contrib.zip" />
        <condition property="ANTCONTRIB_HOME" value="${env.ANTCONTRIB_HOME}">
            <isset property="env.ANTCONTRIB_HOME" />
        </condition>
        <condition property="local.ANTCONTRIB.location" value="${ANTCONTRIB_HOME}">
            <and>
                <isset property="ANTCONTRIB_HOME" />
                <available file="${ANTCONTRIB_HOME}/lib/ant-contrib.jar" />
            </and>
        </condition>
        <condition property="not.external.protocol" value="true">
            <not>
                <or>
                    <contains string="___${remote.ANTCONTRIB.archive}" substring="___http:" />
                    <contains string="___${remote.ANTCONTRIB.archive}" substring="___ftp:" />
                    <contains string="___${remote.ANTCONTRIB.archive}" substring="___https:" />
                    <contains string="___${remote.ANTCONTRIB.archive}" substring="___jar:" />
                </or>
            </not>
        </condition>
        <condition property="antcontrib.unzipped" value="true">
            <or>
                <isset property="local.antcontrib.location" />
                <available file="${build.precopied.dir}/common/ANTCONTRIB/ant-contrib/ANTCONTRIB.txt" />
            </or>
        </condition>
        <property name="local.ANTCONTRIB.location" location="${build.precopied.dir}/common/ANTCONTRIB/ant-contrib" />
        <condition property="need.copy" value="true">
            <and>
                <not>
                    <isset property="antcontrib.unzipped" />
                </not>
                <isset property="not.external.protocol" />
                <not>
                    <available file="${build.precopied.dir}/archives/common/ANTCONTRIB/ant-contrib.zip" />
                </not>
            </and>
        </condition>
        <condition property="need.get" value="true">
            <and>
                <not>
                    <isset property="antcontrib.unzipped" />
                </not>
                <not>
                    <isset property="not.external.protocol" />
                </not>
                <not>
                    <available file="${build.precopied.dir}/archives/common/ANTCONTRIB/ant-contrib.zip" />
                </not>
            </and>
        </condition>
        <condition property="http.proxyHost" value="${env.http.proxyHost}">
            <isset property="env.http.proxyHost" />
        </condition>
        <condition property="http.proxyPort" value="${env.http.proxyPort}">
            <isset property="env.http.proxyPort" />
        </condition>
        <condition property="proxy" value="true">
            <isset property="http.proxyHost" />
        </condition>
        <mkdir dir="${build.precopied.dir}/archives/common/ANTCONTRIB/" />
    </target>

</project>