<project name="GL_Build" default="dist" basedir="../..">

    <description> Build for ... </description>

    <!-- set global properties for this build -->

    <target name="init.win" if="if.win">
        <echo message="init windows build..."/>
        <property name="ntvlibname.path" value="${src.win.native}/gl"/>
    </target>

    <target name="init.linux" if="if.linux">
        <echo message="init linux build..."/>
        <property name="ntvlibname.path" value="${src.linux.native}/gl"/>
        <mkdir dir="${ntvlibname.path}"/>
        <property name="objs" value=""/>
    </target>

    <target name="init" depends="init.win, init.linux">
        <property name="ntvlibnamecmm.path" value="${src.common.native}/gl/cmm"/>

        <path id="dir.current">
            <pathelement path="${ant.file}"/>
        </path>

        <condition property="middle" value="make\\native\\common\\">
            <and>
                <os family="windows"/>
            </and>
        </condition>

        <condition property="middle" value="make/native/common/">
            <and>
                <os family="unix"/>
            </and>
        </condition>

        <echo message="middle=${middle}"/>

        <pathconvert targetos="${target.os}" property="library.name.postfix" refid="dir.current">
            <mapper type="regexp" from="^(.*)${middle}(.*).xml" to="\2"/>
        </pathconvert>

        <property name="library.name" value="${library.name.postfix}"/>

        <property name="ntvlibname.common.path" value="${src.common.native}/${library.name}"/>

        <echo message="ant.file.os=${ant.file.os}"/>
        <echo message="middle=${middle}"/>
        <echo message="middle.os=${middle.os}"/>
        <echo message="library.name=${library.name}"/>
        <echo message="ntvlibname.path=${ntvlibname.path}"/>

        <property name="lib_tmp" location="${tmp}/${library.name}"/>
        <mkdir dir="${lib_tmp}"/>

        <condition property="unpack.objs.command" value="ar -xo ${lib_tmp}/libpng.a">
            <and>
                <os family="unix"/>
            </and>
        </condition>
    </target>

    <target name="unpack.objs" if="if.linux">
        <exec command="${unpack.objs.command}" dir="${lib_tmp}"/>
    </target>

    <target name="copylib.lnx.ia32" if="if.x86">
        <copy tofile="${lib_tmp}/libpng.a" file="${harmony.depends.native.build.path}/png/libpng.ia32" overwrite="true"/>
        <antcall target="unpack.objs" inheritall="true"/>
    </target>

    <target name="copylib.lnx" if="if.linux">
        <antcall target="copylib.lnx.ia32" inheritall="true"/>
    </target>

    <target name="copylib.win" if="if.win">
        <copy tofile="${lib_tmp}/libpng.lib" file="${harmony.depends.native.build.path}/png/libpng.lib" overwrite="true"/>
    </target>

    <target name="copylib" depends="copylib.lnx, copylib.win">
        <copy todir="${lib_tmp}">
            <fileset dir="${ntvlibnamecmm.path}" includes="Exceptions.h"/>
            <mapper type="flatten"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${ntvlibnamecmm.path}" includes="Exceptions.c"/>
            <mapper type="flatten"/>
        </copy>

        <patternset id="gl.exclude">
            <include name="**/*.h"/>
            <include name="**/*.c"/>
            <include name="**/*.cpp"/>
            <exclude name="JPEGDecoder/**"/>
            <exclude name="JPEGEncoder/**"/>
            <exclude name="cmm/**"/>
            <exclude name="CMM/**"/>
            <exclude name="imageops/**"/>
        </patternset>

        <copy todir="${lib_tmp}">
            <fileset dir="${ntvlibname.common.path}">
                <patternset refid="gl.exclude"/>
            </fileset>
            <fileset dir="${ntvlibname.path}">
                <patternset refid="gl.exclude"/>
            </fileset>
            <mapper type="flatten"/>
        </copy>
    </target>

    <target name="compile.common.native" depends="init, copylib">

        <echo message="make common native..."/>

        <!-- Compile using msvc or gcc -->

        <!-- ==========================================================   -->
        <cc name="${native.compiler}"
            outfile="${lib_tmp}/${library.name}"
            outtype="shared"
            runtime="dynamic"
            debug="${native.debug.option}"
            >
            <env key="PATH" value="${cPath}"/>
            <env key="INCLUDE" value="${cINCLUDE}"/>
            <env key="LIB" value="${cLIB}"/>
            <env key="TMP" value="${tmp}"/>

            <fileset dir="${lib_tmp}" includes="*.obj, *.c, *.cpp, png*.o" excludes="pngdecoder.o"/>

            <compilerarg value="/O3" if="if.icl"/>
            <compilerarg value="/O2" if="if.msvc"/>
  
            <compilerarg value="/MDd" if="if.win"/>
 
            <compilerarg value="-I${jni_h.path}"/>
            <compilerarg value="-I${lib_tmp}"/>
            <compilerarg value="-I${harmony.depends.native.build.path}/png"/>

            <compilerarg value="-fPIC" if="if.linux"/>

            <linkerarg value="gdi32.lib" if="if.win"/>
            <linkerarg value="Msimg32.lib" if="if.win"/>
            <linkerarg value="gdiplus.lib" if="if.win"/>
            <linkerarg value="User32.lib" if="if.win"/>
            <linkerarg value="uxTheme.lib" if="if.win"/>
            <linkerarg value="-lstdc++" if= "if.linux"/>
            <linkerarg value="libpng.lib" if="if.win"/>
            <linkerarg value="hyzlib.lib" if="if.win"/>
            <linkerarg value="/LIBPATH:${native.zlib.lib}" if="if.win"/>
            <linkerarg value="-lz" if="if.linux"/>
        </cc>

        <copy todir="${build.lib.path}">
            <fileset dir="${lib_tmp}" includes="lib${library.name}${library.ext}"/>
            <fileset dir="${lib_tmp}" includes="${library.name}${library.ext}"/>
            <fileset dir="${lib_tmp}" includes="${library.name}.pdb"/>
        </copy>
    </target>

    <target name="dist" depends="compile.common.native" description="">
        <echo message="Compiling native finished ..."/>
    </target>
</project>
