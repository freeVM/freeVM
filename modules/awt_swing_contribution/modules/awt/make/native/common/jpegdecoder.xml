<project name="MyBuild" default="dist" basedir="../..">

    <description> Build for ... </description>

    <!-- set global properties for this build -->

    <target name="init.win" if="if.win">
        <echo message="init windows build..."/>
    </target>

    <target name="init.linux" if="if.linux">
        <echo message="init linux build..."/>
        <property name="objs" value=""/>
    </target>

    <target name="init" depends="init.win, init.linux">

        <!-- path to libjpeg in externals -->
        <property name="JPEGDecoder.path" value="lib/jpeg/"/>

        <path id="dir.current">
            <pathelement path="${ant.file}"/>
        </path>

        <condition property="middle" value="make\\native\\common\\">
            <and>
                <os family="windows"/>
            </and>
        </condition>

        <condition property="middle" value="make/native/common/">
            <and>
                <os family="unix"/>
            </and>
        </condition>

        <echo message="middle=${middle}"/>

        <pathconvert targetos="${target.os}" property="library.name.postfix" refid="dir.current">
            <mapper type="regexp" from="^(.*)${middle}(.*).xml" to="\2"/>
        </pathconvert>

        <property name="library.name" value="${library.name.postfix}"/>

        <property name="ntvlibname.path" value="${src.common.native}/gl/JPEGDecoder"/>
        <property name="ntvlibnamecmm.path" value="${src.common.native}/gl/cmm"/>

        <echo message="ant.file.os=${ant.file.os}"/>
        <echo message="middle=${middle}"/>
        <echo message="middle.os=${middle.os}"/>
        <echo message="library.name=${library.name}"/>
        <echo message="ntvlibname.path=${ntvlibname.path}"/>

        <property name="lib_tmp" location="${tmp}/${library.name}"/>
        <mkdir dir="${lib_tmp}"/>

        <condition property="unpack.objs.command" value="ar -xo ${lib_tmp}/libjpeg.a">
            <and>
                <os family="unix"/>
            </and>
        </condition>
    </target>

    <target name="unpack.objs" if="if.linux">
        <exec command="${unpack.objs.command}" dir="${lib_tmp}"/>
    </target>

    <target name="copyconfig.win" if="if.win">
        <copy tofile="${lib_tmp}/jconfig.h" file="${harmony.depends.native.build.path}/jpeg/jconfig.vc" overwrite="true"/>
    </target>

    <target name="copyconfig.lnx" if="if.linux">
        <copy tofile="${lib_tmp}/jconfig.h" file="${harmony.depends.native.build.path}/jpeg/jconfig.lnx" overwrite="true"/>

        <!-- Copy library for proper architecture -->
        <antcall target="copylib.lnx.ia32"/>
        <antcall target="copylib.lnx.ipf"/>
        <antcall target="copylib.lnx.em64t"/>
    </target>

    <target name="copylib.lnx.ia32" if="if.x86">
        <copy tofile="${lib_tmp}/libjpeg.a" file="${harmony.depends.native.build.path}/jpeg/libjpeg.ia32" overwrite="true"/>
    </target>

    <target name="copylib.lnx.ipf" if="if.ipf">
        <copy tofile="${lib_tmp}/libjpeg.a" file="${harmony.depends.native.build.path}/jpeg/libjpeg.ipf" overwrite="true"/>
    </target>

    <target name="copylib.lnx.em64t" if="if.x86_64">
        <copy tofile="${lib_tmp}/libjpeg.a" file="${harmony.depends.native.build.path}/jpeg/libjpeg.em64t" overwrite="true"/>
    </target>

    <target name="compile.common.native" depends="init">

        <echo message="make common native..."/>

        <!-- Compile the native code from ${src.common.native} 
         and putting .dll or .so to ${lib_tmp}/lib -->

        <property name="path.to.build.native" value="${ntvlibname.path}"/>

        <echo message="path.to.build.native=${path.to.build.native}"/>

        <copy todir="${lib_tmp}">
            <fileset dir="${path.to.build.native}" includes="*.c"/>
            <mapper type="package" from="*.c" to="*.c"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${harmony.depends.native.build.path}/jpeg" includes="**/*.h"/>
            <mapper type="flatten"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${harmony.depends.native.build.path}/jpeg" includes="**/*.lib"/>
            <mapper type="flatten"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${path.to.build.native}" includes="**/*.cpp"/>
            <mapper type="package" from="*.cpp" to="*.cpp"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${path.to.build.native}" includes="**/*.h"/>
            <mapper type="flatten"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${ntvlibnamecmm.path}" includes="Exceptions.h"/>
            <mapper type="flatten"/>
        </copy>

        <copy todir="${lib_tmp}">
            <fileset dir="${ntvlibnamecmm.path}" includes="Exceptions.c"/>
            <mapper type="flatten"/>
        </copy>
    
        <!-- Copy configuration files, different for different platforms -->
        <antcall target="copyconfig.win"/>
        <antcall target="copyconfig.lnx"/>

        <!-- Unpack object files from the static library -->
        <antcall target="unpack.objs"/>

        <!-- Compile using msvc or gcc -->

        <!-- ==========================================================   -->

        <cc name="${native.compiler}"
            outfile="${lib_tmp}/${library.name}"
            outtype="shared"
            runtime="static"
            debug="${native.debug.option}"
            multithreaded="false"
            >
            <env key="PATH" value="${cPath}"/>
            <env key="INCLUDE" value="${cINCLUDE}"/>
            <env key="LIB" value="${cLIB}"/>
            <env key="TMP" value="${tmp}"/>

            <fileset dir="${lib_tmp}" includes="*.c, *.cpp, *.o" excludes="Exceptions.o, JpegDecoder.o"/>

            <compilerarg value="-I${lib_tmp}"/>
            <compilerarg value="-I${jni_h.path}"/>
            <compilerarg value="/O3" if="if.icl"/>
            <compilerarg value="/O2" if="if.msvc"/>

            <linkerarg value="libjpeg.lib" if="if.win"/>
        </cc>

        <!-- ==========================================================   -->

        <copy todir="${build.lib.path}">
            <fileset dir="${lib_tmp}" includes="${library.name}${library.ext}"/>
            <fileset dir="${lib_tmp}" includes="lib${library.name}${library.ext}"/>
            <fileset dir="${lib_tmp}" includes="${library.name}.pdb"/>
        </copy>
    </target>

    <target name="dist" depends="compile.common.native" description="">
        <echo message="Compiling native finished ..."/>
    </target>
</project>
