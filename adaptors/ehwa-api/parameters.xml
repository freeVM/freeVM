<parameters depends="drlvm">
    
    <required>
        <built.drlvm.trunk 
            description="Path to built drlvm trunk"
            value="${drlvm.parameters.shared.trunk.dir}" />
        <common.resources description="Path to shared pool" 
            value="${built.drlvm.trunk}/../common_resources"
            url="http://svn.apache.org/repos/asf/harmony/enhanced/common_resources"/>
        <drlvm.config
            description="The built drlvm configuration (debug/release)"
            value="${drlvm.parameters.shared.build.config}"/>
        <tested.runtime
            description="Path to Tested Runtime"
            value="${drlvm.parameters.shared.jre.dir}"/>
    </required>
    
    <optional>
        <test.mode 
            description="DRLVM Test Execution Modes"
            value="jit,jet,opt,int,srv,gc_cc"/>
        <tested.jre.options
            description="Options for the tested runtime"
            value=""/>
        <eclipse.download.address
            description="Url where Eclipse download archives can be found" 
            value="http://archive.eclipse.org/eclipse/downloads/drops/R-3.2.1-200609210945"/>
    </optional>

</parameters>
