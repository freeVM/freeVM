        <svn.url value="https://svn.apache.org/repos/asf/harmony/enhanced/trunk"/>
        <trunk.dir location="${checkouts.dir}/hdk" id="trunk.dir.id"/>
        <classlib.trunk.dir location="${checkouts.dir}/hdk/working_classlib" 
