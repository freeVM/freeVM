        <usesvn refid="trunk.dir.id"/>
        <usesvn.classlib refid="classlib.trunk.dir.id"/>
        <usesvn.drlvm refid="drlvm.trunk.dir.id"/>
        <usesvn.jdktools refid="jdktools.trunk.dir.id"/>
