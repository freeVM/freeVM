<!--
    This is build descriptor for the component "extra.hello".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="extra.hello">
    <target name="init" >
        <property name="build.java.depends" value="vm.kernel_classes,classlib.luni" />

        <mkdir dir="${build.dir}/_other" />

        <echo file="${build.dir}/_other/Hello.java">
public class Hello {
    public static void main(String args[]) {
        System.out.println("Hello");
    }
}
</echo>

        <fixcrlf srcDir="${build.dir}/_other" includes="Hello.java" />

        <patternset id="java.source.pattern">
            <include name="Hello.java" />
        </patternset>

        <patternset id="java.classes.pattern">
            <include name="-none-.class" />
        </patternset>

        <property name="java.build.dir" location="${build.dir}/_other" />

        <path id="java.source">
            <pathelement location="${build.dir}/_other"/>
        </path>

        <path id="java.class.path">
            <fileset dir="${vm.kernel_classes.jardir}" includes="${vm.kernel_classes.jarname}" />
            <fileset dir="${classlib.luni.jardir}" includes="${classlib.luni.jarname}" />
        </path>
    </target>
</project>
