<!--
    This is build descriptor for the component "vm".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="vm">
    <target name="init" depends="common">
        <select arch="ia32">
            <property  name="build.depends" value="vm.vmcore, 
                                                   vm.em, 
                                                   vm.gc,
                                                   vm.vmi,
                                                   vm.interpreter,
                                                   vm.hythr,
                                                   vm.jitrino,
                                                   vm.kernel_classes" />
        </select>

        <!-- ia32 dependence but w/o vm.vmi -->
        <select arch="ipf">
            <property name="build.depends" value="vm.vmcore,
                                                  vm.em, 
                                                  vm.gc,
                                                  vm.interpreter,
                                                  vm.hythr,
                                                  vm.jitrino,
                                                  vm.kernel_classes" />
        </select>
        
        <!-- ia32 dependence but w/o vm.vmi and vm.jitrino -->
        <select arch="em64t">
            <property name="build.depends" value="vm.vmcore,
                                                  vm.em, 
                                                  vm.gc, 
                                                  vm.interpreter,
                                                  vm.hythr,
                                                  vm.jitrino,
                                                  vm.kernel_classes"  />
        </select>

        <property name="smoke.test.depends" value="" />

        <property name="smoke.test.javasrc" location="${build.VM.home}/tests/smoke" />
        
        <patternset id="smoke.test.java.pattern">
            <include name="**/*.java"/>
            <exclude name="**/Logger.java"/>
        </patternset>        
        <patternset id="smoke.test.pattern">
            <include name="**/*.class"/>
            <exclude name="**/*$*.class"/>
        </patternset>        

    </target>
</project>
