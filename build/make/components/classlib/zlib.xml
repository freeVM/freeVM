<!--
    This is build descriptor for the component "classlib.zlib".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="classlib.zlib">

    <target name="prepare_src">
        <unzip src="${build.CLASSLIB.home}/depends/oss/zlib_1.2.3.zip" dest="${build.dir}" />
    </target>

    <target name="init" depends="prepare_src, common_classlib">
        <property name="outtype" value="shared" />
        <property name="libname" value="hyzlib" />
        <property name="includes" value="${build.dir}"/>

        <compiler id="c.compiler" extends="common.c.compiler">
            <select os="lnx">
                <compilerarg value="-fpic" />
            </select>
                <select cxx="msvc">
                <compilerarg value="-WX" />
                </select>
            <fileset dir="${build.dir}">
                <include name="*.c"/>
                <exclude name="example.c"/>
                <exclude name="minigzip.c"/>
            </fileset>
        </compiler>

        <linker id="linker" extends="common.linker">
            <select os="win">
                <linkerarg value="/DEF:${common.src}/${libname}.def" />
            </select>
            <select cfg="debug" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmtd.lib" />
            </select>
            <select cfg="release" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmt.lib" />
            </select>
            <select os="lnx">
                <linkerarg value="-Wl,--version-script,${common.src}/lib${libname}.exp" />
                <linkerarg value="-Wl,-Bsymbolic" />
                <syslibset libs="c,m,dl" />
            </select>
        </linker>
    </target>
</project>
