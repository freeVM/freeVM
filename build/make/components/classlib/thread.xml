<!--
    This is build descriptor for the component "classlib.thread".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="classlib.thread">
    <target name="init" depends="common_classlib">
        <property name="libname" value="hythr" />
        <property name="outtype" value="shared" />
        <property name="build.depends" value="classlib.common,classlib.pool" />
        <select os="lnx">
            <property name="os.native.dir" location="${common.src}/native-src/linux.IA32" />
        </select>
        <select os="win">
            <property name="os.native.dir" location="${common.src}/native-src/win.IA32" />
        </select>
        <compiler id="cpp.compiler" extends="common.cpp.compiler">
            <select os="lnx">
                <compilerarg value="-fPIC" />
            </select>
                <select cxx="msvc">
                <compilerarg value="-WX" />
                </select>
        </compiler>
        <compiler id="c.compiler" extends="common.c.compiler">
            <select os="lnx">
                <compilerarg value="-fPIC" />
            </select>
                <select cxx="msvc">
                <compilerarg value="-WX" />
                </select>
        </compiler>
        <linker id="linker" extends="common.linker">
            <libset libs="${classlib.pool.lib}" dir="${classlib.pool.libdir}" />
            <libset libs="${classlib.common.lib}" dir="${classlib.common.libdir}" />
            <select os="win">
                <linkerarg value="/DEF:${common.src}/${libname}.def" />
                <linkerarg value="-map:${libname}.map" />
            </select>
            <select cfg="debug" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmtd.lib" />
            </select>
            <select cfg="release" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmt.lib" />
            </select>
                        <select os="lnx">
                            <linkerarg value="-Wl,--version-script,${common.src}/lib${libname}.exp" />
                            <syslibset libs="c,m,dl,pthread" />
                        </select>
        </linker>
    </target>
</project>
