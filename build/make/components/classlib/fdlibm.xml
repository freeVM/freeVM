<!--
    This is build descriptor for the component "classlib.fdlibm".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="classlib.fdlibm">

    <target name="prepare_src">
        <select os="win">
             <unzip src="${build.CLASSLIB.home}/depends/oss/fdlibm_5.2.zip"
               dest="${build.dir}" />
        </select>
        <select os="lnx">
             <unzip src="${build.CLASSLIB.home}/depends/oss/fdlibm_5.2.zip"
               dest="${build.dir}" />
        </select>

    </target>

    <target name="init" depends="prepare_src, common_classlib">
        <property name="libname" value="hyfdlibm" />
                <property name="includes" value="${build.dir}"/>
        
        <compiler id="c.compiler" extends="common.c.compiler">
            <defineset define="_MT,_IEEE_LIBM,HY_PLATFORM_DOUBLE_ORDER" />

           <select os="lnx">
               <compilerarg value="-ffloat-store" />
           </select>
        
                   <fileset dir="${build.dir}" includes="*.c"/>
                
           <select os="win">
                <defineset>
                    <define value="_cdecl" name="CRTAPI1" />
                    <define value="_cdecl" name="CRTAPI2" />
                    <define value="1" name="_X86_" />
                    <define value="0x0400" name="WINVER" />
                    <define value="0x0400" name="_WIN32_WINNT" />
                    <define value="0x0400" name="_WIN32_WINDOWS" />
                    <define value="0x0500" name="_WIN32_IE" />
                </defineset>
                <compilerarg value="-FIsehmap.h" />

                <compilerarg value="-W3" />

                <compilerarg value="-Oityb1" />
                <compilerarg value="-MD" />
            </select>

       </compiler>



        <linker id="linker" extends="common.linker">
            <select cfg="debug" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmtd.lib" />
            </select>
            <select cfg="release" os="win">
                <linkerarg value="/NODEFAULTLIB:libcmt.lib" />
            </select>
                        <select os="lnx">
                            <syslibset libs="c,m,dl" />
                        </select>
        </linker>
    </target>

</project>
