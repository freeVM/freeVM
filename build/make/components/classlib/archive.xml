<!--
    This is build descriptor for the component "classlib.archive".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="classlib.archive">
        <target name="init" depends="common_classlib">

                <property name="build.depends" value="classlib.common,classlib.sig,vm.hythr,classlib.zlib,classlib.zip,classlib.pool,classlib.fdlibm, classlib.vmi" />

                <!--native part-->
                <property name="libname" value="hyarchive" />
                <property name="outtype" value="shared" />
                <fileset id="c.fileset" dir="${build.CLASSLIB.home}/native-src">
                        <select os="win">
                                <include name="win.IA32/${component.name}\*.c" />
                                <exclude name="win.IA32/${component.name}\jclglob_harmony.c" />
                        </select>
                        <select os="lnx">
                                <include name="linux.IA32/${component.name}\*.c" />
                                <exclude name="win.IA32/${component.name}\jclglob_harmony.c" />
                        </select>
                        <include name="shared/${component.name}/*.c" />
                </fileset>
                <compiler id="c.compiler" extends="common.c.compiler">
                        <includepath>
                                <pathelement location="${classlib.common.includes}" />
                                <pathelement location="${classlib.zip.includes}" />
                                <pathelement location="${classlib.zlib.includes}" />
                                <pathelement location="${classlib.fdlibm.includes}" />
                                <pathelement location="${common.src}" />
                                <pathelement location="${shared.dir}/common" />
                        </includepath>
                        <select os="lnx">
                                <compilerarg value="-fPIC" />
                        </select>
                <select cxx="msvc">
                <compilerarg value="-WX" />
                </select>
                </compiler>
                <linker id="linker" extends="common.linker">
                        <libset libs="${classlib.common.lib}" dir="${classlib.common.libdir}" />
                        <libset libs="${classlib.sig.lib}" dir="${classlib.sig.libdir}" />
                        <libset libs="${classlib.zip.lib}" dir="${classlib.zip.libdir}" />
                        <libset libs="${classlib.zlib.lib}" dir="${classlib.zlib.libdir}" />
                        <libset libs="${classlib.pool.lib}" dir="${classlib.pool.libdir}" />
                        <libset libs="${classlib.fdlibm.lib}" dir="${classlib.fdlibm.libdir}" />
                        <libset libs="${vm.hythr.lib}" dir="${vm.hythr.libdir}" />
                        <libset libs="${classlib.vmi.lib}" dir="${classlib.vmi.libdir}" />
                        <select os="win">
                                <syslibset libs="ws2_32,Iphlpapi" />
                                <linkerarg value="/DEF:${common.src}/${libname}.def" />
                                <linkerarg value="-map:${libname}.map" />
                        </select>
                        <select os="win" cfg="debug">
                                <linkerarg value="/NODEFAULTLIB:libcmtd.lib" />
                        </select>
                        <select os="win" cfg="release">
                                <linkerarg value="/NODEFAULTLIB:libcmt.lib" />
                        </select>
                        <select os="lnx">
                            <linkerarg value="-Wl,--version-script,${common.src}/lib${libname}.exp" />
                            <syslibset libs="c,m,dl" />
                        </select>
                </linker>

                <!-- java part is defined in coommon_classlib.xml (see make/targets directory) -->
        </target>
</project>
