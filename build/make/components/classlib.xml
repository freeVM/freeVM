<!--
    This is build descriptor for the component "classlib".

    Please refer to make/components/README.txt for details about the component
    build descriptor structure.
  -->

<project name="classlib">
    <target name="init" depends="common">
        <select arch="ia32">
            <property name="build.depends" value="classlib.nio_char,
                                                  classlib.regex,
                                                  classlib.security,
                                                  extra.icu4c,
                                                  classlib.crypto,
                                                  classlib.x_net,
                                                  classlib.archive,
                                                  classlib.common,
                                                  classlib.fdlibm,
                                                  classlib.luni,
                                                  classlib.math,
                                                  classlib.nio,
                                                  classlib.pool,
                                                  classlib.port,
                                                  classlib.sig,
                                                  classlib.sql,
                                                  classlib.text,
                                                  classlib.auth,
                                                  classlib.zip,
                                                  classlib.zlib" />
            <select os="lnx">
                <property name="os.native.dir" location="${build.CLASSLIB.home}/native-src/linux.IA32" />
            </select>
            <select os="win">
                <property name="os.native.dir" location="${build.CLASSLIB.home}/native-src/win.IA32" />
            </select>

            <mkdir dir="${build.dir}/includes" />
            <copy todir="${build.dir}/includes">
                <fileset dir="${os.native.dir}/include">
                    <include name="**" />
                      <exclude name="jni.h" />
                </fileset>
            </copy>

            <property name="includes" location="${build.dir}/includes" />
        </select>

        <select arch="em64t,ipf">
            <property name="build.depends" value="" />
        </select>
    </target>
</project>
