<!--
Description of the product deploy folder.
-->

<deploy>
    <vm>
        <vmstart>
            <executable>bin:java</executable>
        </vmstart>

        <encoder>
            <static>bin:encoder</static>
        </encoder>

        <em>
            <shared>bin:em</shared>
        </em>

        <vmcore>
            <static>bin:vmcore</static>
            <shared>bin:vmcore</shared>
        </vmcore>

        <interpreter>
            <shared>bin:interpreter</shared>
        </interpreter>

        <select arch="ia32,ipf">
            <jitrino>
                <shared>bin:jitrino</shared>
            </jitrino>
        </select>

        <gc>
            <shared>bin:gc</shared>
        </gc>

        <select arch="ia32">
            <vmi>
                <shared>bin:vmi</shared>
            </vmi>
        </select>

        <kernel_classes>
            <jar>lib/boot:kernel</jar>
        </kernel_classes>

        <hythr>
            <shared>bin:hythr</shared>
        </hythr>
     </vm>


    <extra>
        <eclipse_script>
            <select os="win">
                <other>bin:eclipse.bat</other>
            </select>

            <select os="lnx">
                <other>bin:eclipse.sh</other>
            </select>
        </eclipse_script>
        <select os="win">
            <zlib>
                <shared>bin:zlib1</shared>
            </zlib>
        </select>

        <hyplugin>
            <jar>lib:*</jar>
        </hyplugin>


        <java_script>
            <select os="win">
                <other>bin:java.bat</other>
            </select>

            <select os="lnx">
                <other>bin:java.sh</other>
            </select>
        </java_script>

    </extra>
</deploy>
