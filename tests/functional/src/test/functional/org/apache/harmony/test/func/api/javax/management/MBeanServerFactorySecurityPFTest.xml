<Test ID="MBeanServerFactorySecurityPFTest"
    date-of-creation="2005-11-03" timeout="1">

    

    

    <APITestDescription>
        <TestedClass name="javax.management.MBeanServerFactory" />
        <TestedMethod
            name="public static ArrayList findMBeanServer(String agentId) " />
        <TestedMethod
            name="public static ClassLoaderRepository getClassLoaderRepository(MBeanServer server) " />
        <TestedMethod
            name="public static MBeanServer createMBeanServer() " />
        <TestedMethod
            name="public static MBeanServer createMBeanServer(String domain) " />
        <TestedMethod
            name="public static MBeanServer newMBeanServer() " />
        <TestedMethod
            name="public static MBeanServer newMBeanServer(String domain) " />
        <TestedMethod
            name="public static void releaseMBeanServer(MBeanServer mbeanServer) " />

        <Description>
            The same as MBeanServerFactorySecurityTest but this test
            uses policy files.
        </Description>
    </APITestDescription>

    <Keyword name="functional" />

    <Source name="MBeanServerFactorySecurityPFTest.java" />

    <Runner ID="Runtime">
        <Param name="toRun"
            value="org.apache.harmony.test.func.api.javax.management.MBeanServerFactorySecurityPFTest">
            <Option name="mbsfPolicyDir" value="$TestDirectory/auxiliary/mbsf_policy" />
        </Param>
    </Runner>

    <Restriction name="OtherVMOnly" />
</Test>
